<UserControl x:Class="TajikSpeechRecognition.UI.Controls.LogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TajikSpeechRecognition.UI.Controls">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <UserControl Content="{Binding Icon}" Margin="0 0 10 0"/>
            <TextBlock Text="{Binding Value}" Foreground="{Binding FontColor}" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
