<local:LogBaseControl
    x:Class="TajikSpeechRecognition.UI.Controls.LogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TajikSpeechRecognition.UI.Controls"
    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="thisPage">
    <Grid>
        <StackPanel Margin="0,3" Orientation="Horizontal">
            <UserControl
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Content="{Binding Icon, ElementName=thisPage}" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="13"
                Foreground="{Binding FontColor, ElementName=thisPage}"
                Text="{Binding Log.Log, ElementName=thisPage}"
                TextWrapping="WrapWithOverflow" />
        </StackPanel>
    </Grid>
</local:LogBaseControl>
