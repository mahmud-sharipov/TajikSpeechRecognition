<local:LogBaseControl x:Class="TajikSpeechRecognition.UI.Controls.LogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
x:Name="thisPage"
             xmlns:local="clr-namespace:TajikSpeechRecognition.UI.Controls">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0 3">
            <UserControl Content="{Binding Icon, ElementName=thisPage}" Margin="0 0 10 0" VerticalAlignment="Center"/>
            <TextBlock FontSize="13" VerticalAlignment="Center" Text="{Binding Log.Log, ElementName=thisPage}" Foreground="{Binding FontColor,ElementName=thisPage}" TextWrapping="WrapWithOverflow"/>
        </StackPanel>
    </Grid>
</local:LogBaseControl>
